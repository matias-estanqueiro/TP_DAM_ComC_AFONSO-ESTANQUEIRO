<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GymApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorSecondary">@color/dark_secondary</item>
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorAccent">@color/dark_accent</item>

        <!-- Font -->
        <item name="android:fontFamily">@font/titillium_web_bold</item>

        <!-- Background App Image -->
        <item name="background">@drawable/bg_login_register_dark</item>
        <item name="app_background">@drawable/bg_app_dark</item>

        <!-- Logo -->
        <item name="logo">@drawable/logo_login_register_dark</item>

        <!-- Icons -->
        <item name="log_out_icon">@drawable/ic_log_out_dark</item>
        <item name="register_client_icon">@drawable/ic_add_client_dark</item>
        <item name="register_payment_icon">@drawable/ic_add_payment_dark</item>
        <item name="register_activity_icon">@drawable/ic_add_activity_dark</item>
        <item name="view_id_card_icon">@drawable/ic_id_card_dark</item>
        <item name="pending_payments_icon">@drawable/ic_pending_payment_dark</item>
        <item name="home_icon">@drawable/ic_home_dark</item>
        <item name="not_member_photo">@drawable/ic_not_member_photo_dark</item>

        <!-- Form Steppers -->
        <item name="stepper_form_one">@drawable/img_stepper_page_one_dark</item>
        <item name="stepper_form_two">@drawable/img_stepper_page_two_dark</item>
        <item name="stepper_form_three">@drawable/img_stepper_page_three_dark</item>

        <!-- Activities -->
        <item name="edit_activity">@drawable/ic_edit_activity_dark</item>
        <item name="delete_activity">@drawable/ic_remove_activity_dark</item>
    </style>
</resources>